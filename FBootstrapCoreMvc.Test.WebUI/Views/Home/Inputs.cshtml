@{
    var genderOpts = (SelectList)ViewBag.GenderOptions;
}

@using (Html.Bootstrap().Container().Begin())
{
    @Html.Bootstrap().Heading3("Range")
    @using (Html.Bootstrap().Div().AddStyle("width", "500px").Begin())
    {
        @Html.Bootstrap().Range(0,100)
        @Html.Bootstrap().Range(0,1,0.1)
        @Html.Bootstrap().Range(0,1,0.1).Disabled()
    }
    @Html.Bootstrap().Heading3("Select")
    @using (Html.Bootstrap().Div().AddStyle("width", "300px").Begin())
    {
        @Html.Bootstrap().Select("Gender", genderOpts)
    }
}

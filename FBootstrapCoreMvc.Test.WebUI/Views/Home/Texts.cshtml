@Html.Bootstrap().Heading2("Text alignment")
@using (Html.Bootstrap().Div().Begin())
{
    @Html.Bootstrap().Paragraph("Start aligned text on all viewport sizes.").AlignText(TextAlign.Start)
    @Html.Bootstrap().Paragraph("Center aligned text on all viewport sizes.").AlignText(TextAlign.Center)
    @Html.Bootstrap().Paragraph("End aligned text on all viewport sizes.").AlignText(TextAlign.End)

    @Html.Bootstrap().Paragraph("Start aligned text on viewports sized SM (small) or wider.").AlignText(TextAlign.Start, Breakpoint.Small)
    @Html.Bootstrap().Paragraph("Start aligned text on viewports sized MD (medium) or wider.").AlignText(TextAlign.Start, Breakpoint.Medium)
    @Html.Bootstrap().Paragraph("Start aligned text on viewports sized LG (large) or wider.").AlignText(TextAlign.Start, Breakpoint.Large)
    @Html.Bootstrap().Paragraph("Start aligned text on viewports sized XL (extra-large) or wider.").AlignText(TextAlign.Start, Breakpoint.XXLarge)
}
<hr />
@Html.Bootstrap().Heading2("Text wrapping and overflow")
@using (Html.Bootstrap().Div().Begin())
{
    @Html.Bootstrap().Div().Width(6, LengthUnit.RootElement).Css(Css.Badge).Background(BgColor.Primary).WrapText().Content("This text should wrap.")
    <br />
    @Html.Bootstrap().Div().Width(8, LengthUnit.RootElement).Border(Border.All).Background(BgColor.Light).WrapText(TextWrap.NoWrap).Content("This text should overflow the parent.")
}
<hr />
@Html.Bootstrap().Heading2("Word break")
@using (Html.Bootstrap().Div().Width(800).Begin())
{
    @Html.Bootstrap().Paragraph("mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm").BreakWord()
}
<hr />
@Html.Bootstrap().Heading2("Text transform")
@using (Html.Bootstrap().Div().Begin())
{
    @Html.Bootstrap().Paragraph("Lowercased text.").TransformText(TextTransform.Lowercase)

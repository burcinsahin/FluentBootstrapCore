@using (Html.Bootstrap().Container().Begin())
{
    @Html.AntiForgeryToken()
    @using (var table = Html.Bootstrap().Table().SetStyle(TableStyle.Bordered | TableStyle.Striped).SetResponsive().Begin())
    {
        @table.TableHeader("col1", "col2", "col3", "col4", "col5", "Edit", "Delete")
        @for (int i = 0; i < 5; i++)
        {
            @using (var row = @table.TableRow().Begin())
            {
                @row.TableData($"val{i}_1")
                @row.TableData($"val{i}_2")
                @row.TableData($"val{i}_3")
                @row.TableData(Html.Bootstrap().CheckBox().Checked())
                @row.TableData(Html.Bootstrap().CheckBox().Disabled())

                @row.TableData(Html.Bootstrap().LinkButton(null,"#").AddIcon(IconType.PencilSquare).Size(ButtonSize.Sm))
                @row.TableData(Html.Bootstrap().Button().AddIcon(IconType.Trash).Size(ButtonSize.Sm).Name("id"))
            }
        }
    }
}
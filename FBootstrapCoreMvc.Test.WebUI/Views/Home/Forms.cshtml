@using (Html.Bootstrap().Container().Begin())
{
    @Html.Bootstrap().Heading3("Overview")
    @using (Html.Bootstrap().Form().Begin())
    {
        @Html.Bootstrap().FormInput("Email address").Type(FormInputType.Email).FormText("We'll never share your email with anyone else.")
        @Html.Bootstrap().FormInput("Password").Type(FormInputType.Password)
        @Html.Bootstrap().FormCheck("Check me out")
        @Html.Bootstrap().Button("Submit").Type(ButtonType.Submit)

    }
    @Html.Bootstrap().Heading3("Form text")
    @using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().FormInput("Password").Type(FormInputType.Password).FormText("Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.")
    }
    @Html.Bootstrap().Heading3("Disabled forms")
    @using (Html.Bootstrap().Div().Begin())
    {
    }
}
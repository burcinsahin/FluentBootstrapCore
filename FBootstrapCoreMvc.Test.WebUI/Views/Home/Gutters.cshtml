@Html.Bootstrap().Heading2("Horizontal gutters")
@using (Html.Bootstrap().Div().Begin())
{
    @using (Html.Bootstrap().Container().Padding(Padding.Horizontal, 4).TextCenter().Begin())
    {
        @using (var row = Html.Bootstrap().Row().Gutter(Gutter.Horizontal, 5).Begin())
        {
            @row.Column().Content(Html.Bootstrap().Div().Padding(Padding.All, 3).Border().Background(BackgroundState.Light).Content("Custom column padding"))
            @row.Column().Content(Html.Bootstrap().Div().Padding(Padding.All, 3).Border().Background(BackgroundState.Light).Content("Custom column padding"))
        }
    }
    <br />
    @using (Html.Bootstrap().Container().Overflow(Overflow.Hidden).TextCenter().Begin())
    {
        @using (var row = Html.Bootstrap().Row().Gutter(Gutter.Horizontal, 5).Begin())
        {
            @row.Column().Content(Html.Bootstrap().Div().Padding(Padding.All, 3).Border().Background(BackgroundState.Light).Content("Custom column padding"))
            @row.Column().Content(Html.Bootstrap().Div().Padding(Padding.All, 3).Border().Background(BackgroundState.Light).Content("Custom column padding"))
        }
    }
}

@Html.Bootstrap().Heading2("No gutters")
@using (Html.Bootstrap().Div().Begin())
{
    @using (var row = Html.Bootstrap().Row().Gutter(Gutter.All, 0).Css(Css.TextCenter).Begin())
    {
        @row.Column().Columnize(6,Breakpoint.Small).Columnize(8,Breakpoint.Medium).Content(".col-sm-6 .col-md-8")
        @row.Column().Columnize(6).Columnize(4,Breakpoint.Medium).Content(".col-6 .col-md-4")
    }

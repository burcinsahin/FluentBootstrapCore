@using (Html.Bootstrap().Container().Begin())
{
    @Html.Bootstrap().Heading1("Link Buttons")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().LinkButton("Default")
        @Html.Bootstrap().LinkButton("Small").Size(ButtonSize.Sm)
        @Html.Bootstrap().LinkButton("Large").Size(ButtonSize.Lg)
        @Html.Bootstrap().LinkButton("Like","action","controller").AddIcon(IconType.HandThumbsUp)
        @Html.Bootstrap().LinkButton("Active","action","controller").Active()
        @Html.Bootstrap().LinkButton("Disabled","action","controller").Disabled()
        @Html.Bootstrap().LinkButton("Warning","action","controller").SetBgState(BackgroundState.Warning)
        @Html.Bootstrap().LinkButton("Warning","action","controller").SetTextBgState(TextBgState.Warning)
    }
    <hr />
    @Html.Bootstrap().Heading1("Buttons")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Button("Default")
        @Html.Bootstrap().Button("Default Named").SetName("Name")
        @Html.Bootstrap().Button("Submit").Type(ButtonType.Submit)
        @Html.Bootstrap().Button("Icon").AddIcon(IconType.Plus)
    }
    <hr />
    @Html.Bootstrap().Heading1("Button States")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Button("Primary").State(ButtonState.Primary)
        @Html.Bootstrap().Button("Secondary").State(ButtonState.Secondary)
        @Html.Bootstrap().Button("Info").State(ButtonState.Info)
        @Html.Bootstrap().Button("Success").State(ButtonState.Success)
        @Html.Bootstrap().Button("Warning").State(ButtonState.Warning)
        @Html.Bootstrap().Button("Danger").State(ButtonState.Danger)
        @Html.Bootstrap().Button("Dark").State(ButtonState.Dark)
        @Html.Bootstrap().Button("Light").State(ButtonState.Light)
        @Html.Bootstrap().Button("Link").State(ButtonState.Link)
    }
    <hr />
}
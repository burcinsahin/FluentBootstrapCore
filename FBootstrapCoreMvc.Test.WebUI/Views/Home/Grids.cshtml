@Html.Bootstrap().Heading2("Responsive classes")
@using (Html.Bootstrap().Div().Begin())
{
    @Html.Bootstrap().Heading3("All breakpoints")
    @using (var container = Html.Bootstrap().Container().TextCenter().Begin())
    {
        @using (var row = container.Row().JustifyContent(JustifyContent.MediumCenter).Begin())
        {
            @row.Column().Content("col")
            @row.Column().Content("col")
            @row.Column().Content("col")
            @row.Column().Content("col")
        }
        @using (var row = container.Row().Begin())
        {
            @row.Column().Width(8).Content("col-8")
            @row.Column().Width(4).Content("col-4")
        }
    }
    @Html.Bootstrap().Heading3("Stacked to horizontal")
    @using (var container = Html.Bootstrap().Container().TextCenter().Begin())
    {
        @using (var row = container.Row().Begin())
        {
            @row.Column().Width(8, Breakpoint.Small).Content("col-sm-8")
            @row.Column().Width(4, Breakpoint.Small).Content("col-sm-4")
        }
        @using (var row = container.Row().Begin())
        {
            @row.Column().Width(null, Breakpoint.Small).Content("col-sm")
            @row.Column().Width(null, Breakpoint.Small).Content("col-sm")
            @row.Column().Width(null, Breakpoint.Small).Content("col-sm")
        }
    }

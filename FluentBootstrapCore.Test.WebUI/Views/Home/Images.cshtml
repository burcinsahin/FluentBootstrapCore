@Html.Bootstrap().Heading2("Responsive images")
@using (Html.Bootstrap().Div().Begin())
{
    @Html.Bootstrap().Image("http://picsum.photos/400","photo").Fluid()
}
@Html.Bootstrap().Heading2("Image thumbnails")
@using (Html.Bootstrap().Div().Begin())
{
    @Html.Bootstrap().Image("http://picsum.photos/200","photo").Thumbnail()
}
@Html.Bootstrap().Heading2("Aligning images")
@using (Html.Bootstrap().Div().Begin())
{
    @using (Html.Bootstrap().Div().Style("overflow","hidden").Begin())
    {
        @Html.Bootstrap().Image("http://picsum.photos/200","photo").Border(borderRadius:BorderRadius.Rounded).Float(Float.Start)
        @Html.Bootstrap().Image("http://picsum.photos/200","photo").Border(borderRadius:BorderRadius.Rounded).Float(Float.End)
    }
    @using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Image("http://picsum.photos/200","photo").Border(borderRadius:BorderRadius.Rounded).Margin(Margin.Horizontal).Display(Display.Block)
    }
    @using (Html.Bootstrap().Div().Css(Css.TextCenter).Begin())
    {
        @Html.Bootstrap().Image("http://picsum.photos/200","photo").Border(borderRadius:BorderRadius.Rounded)
    }

}
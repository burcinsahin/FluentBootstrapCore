<style>
    div > div > div.position-absolute {
        width: 2rem;
        height: 2rem;
        background-color: #212529;
        border-radius: .375rem;
    }
</style>
@Html.Bootstrap().Heading2("Position values")
@using (Html.Bootstrap().Div().Height(400).Begin())
{
    @Html.Bootstrap().Div().Position(Position.Static).Content("static")
    @Html.Bootstrap().Div().Position(Position.Relative).Content("relative")
    @Html.Bootstrap().Div().Position(Position.Absolute).Content("absolute")
    @Html.Bootstrap().Div().Position(Position.Fixed).Content("fixed")
    @Html.Bootstrap().Div().Position(Position.Sticky).Content("sticky")
}
<hr />
@Html.Bootstrap().Heading2("Arrange elements")
@using (Html.Bootstrap().Div().Begin())
{
    @using (Html.Bootstrap().Div().Height(200).Background(BgColor.Light).Position(Position.Relative).Begin())
    {
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.Start0)
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.End0)
        @Html.Bootstrap().Div().Position(Absolute.Top50|Absolute.Start50)
        @Html.Bootstrap().Div().Position(Absolute.Bottom50|Absolute.End50)
        @Html.Bootstrap().Div().Position(Absolute.Bottom0|Absolute.Start0)
        @Html.Bootstrap().Div().Position(Absolute.Bottom0|Absolute.End0)
    }
}
<hr />
@Html.Bootstrap().Heading2("Center elements")
@using (Html.Bootstrap().Div().Begin())
{
    @using (Html.Bootstrap().Div().Height(200).Background(BgColor.Light).Position(Position.Relative).Begin())
    {
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.Start0, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.Start50, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.Start100, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top50|Absolute.Start0, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top50|Absolute.Start50, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top50|Absolute.Start100, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top100|Absolute.Start0, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top100|Absolute.Start50, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top100|Absolute.Start100, Translate.Middle)
    }
    <br />
    @using (Html.Bootstrap().Div().Height(200).Background(BgColor.Light).Position(Position.Relative).Begin())
    {
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.Start0)
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.Start50, Translate.MiddleX)
        @Html.Bootstrap().Div().Position(Absolute.Top0|Absolute.End0)
        @Html.Bootstrap().Div().Position(Absolute.Top50|Absolute.Start0, Translate.MiddleY)
        @Html.Bootstrap().Div().Position(Absolute.Top50|Absolute.Start50, Translate.Middle)
        @Html.Bootstrap().Div().Position(Absolute.Top50|Absolute.End0, Translate.MiddleY)
        @Html.Bootstrap().Div().Position(Absolute.Bottom0|Absolute.Start0)
        @Html.Bootstrap().Div().Position(Absolute.Bottom0|Absolute.Start50, Translate.MiddleX)
        @Html.Bootstrap().Div().Position(Absolute.Bottom0|Absolute.End0)
    }
}
<hr />
@Html.Bootstrap().Heading2("Examples")
@using (Html.Bootstrap().Div().Begin())
{
                //TODO: Need to implement svg?
    @Html.Bootstrap().Button().Margin(3).State(ButtonState.Primary).WithBadge("+99", "unread messages", new BackgroundOptions{ BgColor = BgColor.Secondary }).PositionBadge().Content("Mails")
    @Html.Bootstrap().Button().Margin(3).State(ButtonState.Dark).Position(Position.Relative).Content("Marker")
    @Html.Bootstrap().Button().Margin(3).State(ButtonState.Primary).WithBadge("", "unread messages").PositionBadge().Content("Alerts")
}
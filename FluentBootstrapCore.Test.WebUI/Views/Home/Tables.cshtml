@using (Html.Bootstrap().Container().Begin())
{
    @Html.AntiForgeryToken()
    @using (var table = Html.Bootstrap().Table().Style(TableStyle.Bordered | TableStyle.Striped).Responsive().Begin())
    {
        @table.TableHeader("col1", "col2", "col3", "col4", "col5", "Edit", "Delete")
        @for (int i = 0; i < 5; i++)
        {
            @using (var row = @table.TableRow().Begin())
            {
                @row.TableData($"val{i}_1")
                @row.TableData($"val{i}_2")
                @row.TableData($"val{i}_3")
                @row.TableData(Html.Bootstrap().CheckBox().Checked())
                @row.TableData(Html.Bootstrap().CheckBox().Disabled())

                @row.TableData(Html.Bootstrap().LinkButton(null,"#").Icon(IconType.PencilSquare).Size(ButtonSize.Small))
                @row.TableData(Html.Bootstrap().Button().Icon(IconType.Trash).Size(ButtonSize.Small).Name("id"))
            }
        }
    }
}
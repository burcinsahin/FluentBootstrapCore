    @Html.Bootstrap().Div().Padding(3).Margin(Margin.Bottom, 5).Background(BgColor.Body).Border(borderRadius:BorderRadius.Rounded).Shadow(Shadow.Medium).Content("Regular shadow")
    @Html.Bootstrap().Div().Padding(3).Margin(Margin.Bottom, 5).Background(BgColor.Body).Border(borderRadius:BorderRadius.Rounded).Shadow(Shadow.Large).Content("Larger shadow")
}
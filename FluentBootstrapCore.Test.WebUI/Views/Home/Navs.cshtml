@Html.Bootstrap().Heading2("Using dropdowns")
@Html.Bootstrap().Heading3("Tabs with dropdowns")
@using (var nav = Html.Bootstrap().NavList().Tabs().Begin())
{
    @nav.ListItem().Content("Active").Href().Active()
    using (var dropdown = nav.Dropdown("Dropdown").Begin())
    {
        using (var dropdownMenu = dropdown.DropdownMenu().Begin())
        {
            @dropdownMenu.DropdownItem("Action","#")
            @dropdownMenu.DropdownItem("Another action","#")
            @dropdownMenu.DropdownItem("Something else here","#")
            @dropdownMenu.Divider()
            @dropdownMenu.DropdownItem("Separated link","#")
        }
    }
    @nav.ListItem().Content("Link").Href()
    @nav.ListItem().Content("Disabled").Href().Disabled()
}

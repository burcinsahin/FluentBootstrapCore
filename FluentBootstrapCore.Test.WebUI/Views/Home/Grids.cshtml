@Html.Bootstrap().Heading2("Auto-layout columns")
@using (Html.Bootstrap().Div().Begin())
{
    @Html.Bootstrap().Heading3("Equal-width")
    @using (var container = Html.Bootstrap().Container().TextCenter().Begin())
    {
        @using (var row = container.Row().Begin())
        {
            @row.Column().Content("1 of 2")
            @row.Column().Content("2 of 2")
        }
        @using (var row = container.Row().Begin())
        {
            @row.Column().Content("1 of 3")
            @row.Column().Content("2 of 3")
            @row.Column().Content("3 of 3")
        }
    }

    @Html.Bootstrap().Heading3("Setting one column width")
    @using (var container = Html.Bootstrap().Container().TextCenter().Begin())
    {
        @using (var row = container.Row().Begin())
        {
            @row.Column().Content("1 of 3")
            @row.Column().Columnize(6).Content("2 of 3 (wider)")
            @row.Column().Content("3 of 3")
        }
        @using (var row = container.Row().Begin())
        {
            @row.Column().Content("1 of 3")
            @row.Column().Columnize(5).Content("2 of 3 (wider)")
            @row.Column().Content("3 of 3")
        }
    }
    @Html.Bootstrap().Heading3("Variable width content")
    @using (var container = Html.Bootstrap().Container().TextCenter().Begin())
    {
        @using (var row = InterfaceExtensions.JustifyContent(container.Row(), JustifyContent.Center, Breakpoint.Medium).Begin())
        {
            @row.Column().Columnize(2, Breakpoint.Large).Content("1 of 3")
            @row.Column().Columnize(0).Content("Variable width content")
            @row.Column().Columnize(2, Breakpoint.Large).Content("3 of 3")
        }
        @using (var row = container.Row().Begin())
        {
            @row.Column().Content("1 of 3")
            @row.Column().Columnize(0).Content("Variable width content")
            @row.Column().Columnize(2, Breakpoint.Large).Content("3 of 3")
        }
    }
}

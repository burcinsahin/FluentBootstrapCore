@Html.Bootstrap().Heading2("Nesting")
@using (Html.Bootstrap().Div().Begin())
{
    @using (var container = Html.Bootstrap().Container().TextCenter().Begin())
    {
        @using (var row = container.Row().Begin())
        {
            @row.Column().Columnize(3, Breakpoint.Small).Content("Level 1: .col-sm-3")
            @using (@row.Column().Columnize(9, Breakpoint.Small).Begin())
            {
                @using (var row1 = container.Row().Begin())
                {
                    @row1.Column().Columnize(8).Columnize(6, Breakpoint.Small).Content("Level 2: .col-8 .col-sm-6")
                    @row1.Column().Columnize(4).Columnize(6, Breakpoint.Small).Content("Level 2: .col-4 .col-sm-6")
                }
            }
        }
    }

    <div class="container text-center">
        <div class="row">
            <div class="col-sm-3">
                Level 1: .col-sm-3
            </div>
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-8 col-sm-6">
                        Level 2: .col-8 .col-sm-6
                    </div>
                    <div class="col-4 col-sm-6">
                        Level 2: .col-4 .col-sm-6
                    </div>
                </div>
            </div>
        </div>
    </div>
}

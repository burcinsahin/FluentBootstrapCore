@Html.Bootstrap().Heading2("Supported content")
@using (var navbar = Html.Bootstrap().Navbar().Expand(Breakpoint.Large).Background(BgColor.Light).Begin())
{
    @navbar.Brand("Navbar").Href()
    @navbar.NavbarToggler("navbarSupportedContent")
    @using (var navbarCollapse = navbar.NavbarCollapse("navbarSupportedContent").Begin())
    {
        @using (var nav = navbarCollapse.NavbarNav().Margin(Margin.End).Margin(Margin.Bottom, 2).Margin(Margin.Bottom, 0, Breakpoint.Large).Begin())
        {
            @nav.NavbarLink("Home").Href().Active()
            @nav.NavbarLink("Link").Href()
            @using (var dropdown = nav.Dropdown("Dropdown").Begin())
            {
                @using (var dropdownMenu = dropdown.DropdownMenu().Begin())
                {
                    @dropdownMenu.DropdownItem("Action","#")
                    @dropdownMenu.DropdownItem("Another action","#")
                    @dropdownMenu.Divider()
                    @dropdownMenu.DropdownItem("Something else here","#")
                }
            }
            @nav.NavbarLink("Disabled").Href().Disabled()
        }
        @using (var form = Html.Bootstrap().Form().Attribute("role", "search").Begin())
        {
            @Html.Bootstrap().Input().Css(Css.FormControl).Margin(Margin.End, 2).Placeholder("Search").Attribute("type","search")
            @Html.Bootstrap().Button("Search").Outline(ButtonOutlineState.Success).Type(ButtonType.Submit)
        }
    }
}